# This theme for gitprompt.sh is optimized for the "Solarized Dark" and "Solarized Light" color schemes 
# tweaked for Ubuntu terminal fonts

override_git_prompt_colors() {
  HOST_PROMPT='‹$(hostname)›'
  GIT_PROMPT_THEME_NAME="Hrb33"
  GIT_PROMPT_STAGED="${Yellow}●"
  GIT_PROMPT_STASHED="${BoldMagenta}⚑ "
  GIT_PROMPT_CLEAN="${Green}✔"
  GIT_PROMPT_END_USER=" \n${Green}${HOST_PROMPT} ${BoldBlue}${Time12a}${ResetColor} $ "
  GIT_PROMPT_END_ROOT=" \n${Green}${HOST_PROMPT} ${BoldBlue}${Time12a}${ResetColor} # "
}

reload_git_prompt_colors "Solarized"
